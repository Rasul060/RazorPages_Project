@page
@model RazorPages_Project.Pages.Employees.IndexModel
@{
    ViewData["ShowButtons"] = true;

}

<style>
    .btn {
        width: 75px;
    }
</style>

<form method="get">
    <div class ="input-group">
        <input class="form-control"asp-for="SearchTerm" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>
<h2>Employee</h2>

<div class="card-deck">
    @foreach (var employee in Model.Employees)
    {
        <partial name="Shared/_DisplayEmployeePartial" model="employee" view-data="ViewData"/>
    }
</div>